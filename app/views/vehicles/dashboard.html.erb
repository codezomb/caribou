<% @title = "Vehicle Dashboard" %>
<section>
  <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
      <div class="bg-white relative sm:rounded-lg overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
              <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                <tr>
                  <th scope="col" class="px-4 py-3">Year</th>
                  <th scope="col" class="px-4 py-3">Make</th>
                  <th scope="col" class="px-4 py-3">Model</th>
                  <th scope="col" class="px-4 py-3">MSRP</th>
                  <th scope="col" class="px-4 py-3">Valuation</th>
                  <th scope="col" class="px-4 py-3">Depreciation</th>
                </tr>
              </thead>
              <tbody>
                <% collection.each do |vehicle| %>
                  <tr class="border-b">
                    <td scope="row" class="px-4 py-3"><%= vehicle.year %></td>
                    <td class="px-4 py-3"><%= vehicle.make %></td>
                    <td class="px-4 py-3"><%= vehicle.model %></td>
                    <td class="px-4 py-3"><%= cents_to_dollars(vehicle.msrp) %></td>
                    <td class="px-4 py-3"><%= cents_to_dollars(vehicle.valuation) %></td>
                    <td class="px-4 py-3"><%= cents_to_dollars(vehicle.msrp - vehicle.valuation) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
      </div>
  </div>
</section>
